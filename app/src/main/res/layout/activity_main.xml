<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E91E63"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="serif-monospace"
        android:gravity="center_horizontal"
        android:text="Quotes from Queens"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="#FFE503"
        android:textSize="36sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/attacked"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:onClick="onClick"
            android:scaleType="centerCrop"
            android:tag="attacked"
            app:srcCompat="@drawable/attacked" />

        <ImageView
            android:id="@+id/choices"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:onClick="onClick"
            android:scaleType="centerCrop"
            android:tag="choices"
            app:srcCompat="@drawable/tati" />

        <ImageView
            android:id="@+id/tone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:onClick="onClick"
            android:scaleType="centerCrop"
            android:tag="tone"
            app:srcCompat="@drawable/tone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/successfully"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:cropToPadding="true"
            android:onClick="onClick"
            android:scaleType="centerCrop"
            android:tag="successfully"
            app:srcCompat="@drawable/successfully" />

        <ImageView
            android:id="@+id/bestfriend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:onClick="onClick"
            android:scaleType="centerCrop"
            android:tag="bestfriend"
            app:srcCompat="@drawable/lashawn" />

        <ImageView
            android:id="@+id/dontdothat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:onClick="onClick"
            android:scaleType="centerCrop"
            android:tag="dontdothat"
            app:srcCompat="@drawable/adore" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/makeup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:clickable="false"
            android:cropToPadding="true"
            android:onClick="onClick"
            android:scaleType="centerCrop"
            android:tag="makeup"
            app:srcCompat="@drawable/jiggly" />

        <ImageView
            android:id="@+id/satan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:cropToPadding="true"
            android:onClick="onClick"
            android:scaleType="centerCrop"
            android:tag="satan"
            app:srcCompat="@drawable/bianca" />

        <ImageView
            android:id="@+id/showgirl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:cropToPadding="true"
            android:onClick="onClick"
            android:scaleType="centerCrop"
            android:tag="showgirl"
            app:srcCompat="@drawable/partycity" />
    </LinearLayout>

    <ImageView
        android:id="@+id/shade"
        android:layout_width="148dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight=".5"
        android:onClick="onClick"
        android:scaleType="fitXY"
        android:tag="shade"
        app:srcCompat="@drawable/snake" />

</LinearLayout>